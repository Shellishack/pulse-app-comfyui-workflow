generator client {
  provider = "prisma-client-js"
  output   = "generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NetworkVolume {
  id          String    @id @default(cuid())
  name        String
  description String?
  size        Int
  models      AIModel[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model AIModel {
  id              String         @id @default(cuid())
  name            String
  url             String?
  description     String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  NetworkVolume   NetworkVolume? @relation(fields: [networkVolumeId], references: [id])
  networkVolumeId String?
}
