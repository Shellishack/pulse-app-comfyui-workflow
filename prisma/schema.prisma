generator client {
  provider = "prisma-client-js"
  output   = "generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NetworkVolume {
  id        String    @id @default(cuid())
  runpodId  String    @unique
  models    AIModel[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model AIModel {
  id              String         @id @default(cuid())
  name            String         @unique
  url             String?
  description     String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  networkVolume   NetworkVolume? @relation(fields: [networkVolumeId], references: [id])
  networkVolumeId String?
}

model AccessToken {
  id        String   @id @default(cuid())
  token     String   @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
